#!/usr/bin/env bash

cd "$(dirname "$0")" && cd ../..

echo "Linting..." &&
	echo "$ mix credo --strict --ignore Credo.Check.Design.TagTODO,Credo.Check.Design.AliasUsage" &&
	mix credo --strict --ignore Credo.Check.Design.TagTODO,Credo.Check.Design.AliasUsage

echo "$ mix dialyzer --format dialyxi --quiet" &&
	mix dialyzer --format dialyxi --quiet &&
	exit
